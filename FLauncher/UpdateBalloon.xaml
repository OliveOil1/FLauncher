<UserControl x:Class="FLauncher.UpdateBalloon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FLauncher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Width="320" Height="200">
        <Label Content="FLauncher Updater" FontSize="24" FontWeight="Bold" Margin="10,0,0,0"/>
        <Label x:Name="Status" Content="Already up to date!" Margin="10,40,90,62"/>
        <Button x:Name="Update" Content="Update" Margin="10,168,250,10" Click="Update_Click"/>
        <Button x:Name="Close" Content="x" Margin="290,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" FontSize="14" Click="Close_Click"/>

    </Grid>
</UserControl>
